#include <iostream>
#include <vector>

int main() {
  
  std::vector<int> numbers = {2,5,4,8,10,11,15,13,27};
  
  for (int i = 0; i < numbers.size(); i++)
  {
    int sum = 0;
    int product = 1;
    if (i % 2 == 0)
    {
      sum = sum + i;
    }
    else if (i % 2 == 1) {
      product = product * i;
    }
  }
  
  std::cout << "Sum of even numbers is: " << sum << "\n.";
  std::cout << "Product of odd numbers is: " << product << "\n";
}
